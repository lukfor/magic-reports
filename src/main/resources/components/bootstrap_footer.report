component("bootstrap_footer") {

    options.color = "#546d78"
    options.text_color = "#ffffff"

    footer(
        class: "px-4 py-5 text-center border-top",
        style:"background-color: ${options.color}; color: ${options.text_color};"
    ){
        small(class: "mb-3 mb-md-0", options.text)
    }

}